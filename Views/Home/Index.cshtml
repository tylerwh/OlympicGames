@model TeamListViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">Category</h3>
        <div class="list-group">
            @foreach (Category cat in Model.Categories)
            {
                <a asp-action="Index"
                   asp-route-activeCategory="@cat.CategoryID"
                   asp-route-activeGame="@Model.ActiveGame"
                   class="list-group-item @Model.CheckActiveCategory(cat.CategoryID)">
                    @cat.Name
                </a>
            }
        </div>
        <h3 class="mt-3">Game</h3>
        <div class="list-group">
            @foreach (Game game in Model.Games)
            {
                <a asp-action="Index"
                   asp-route-activeCategory="@Model.ActiveCategory"
                   asp-route-activeGame="@game.GameID"
                   class="list-group-item @Model.CheckActiveGame(game.GameID)">
                    @game.Name
                </a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Team team in Model.Teams)
            {
                <li class="list-inline-item">
                    <a asp-action="Details" asp-route-id="@team.TeamID">
                        <img src="~/images/@team.FlagImage" alt="@team.Name"
                             title="@team.Name | @team.Category.Name @team.Game.Name" />
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
