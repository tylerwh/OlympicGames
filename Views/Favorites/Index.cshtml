@model TeamListViewModel
@{
    var session = new OlympicSession(Context.Session);
}

<div class="text-center">
    <h2>@(session.GetUserName() == null ? "My" : session.GetUserName() + "'s" ) Favorites</h2>
    <form asp-action="Delete" method="post">
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary"
           asp-route-activeCategory="@Model.ActiveCategory"
           asp-route-activeGame="@Model.ActiveGame">
            Back to Home Page
        </a>
        <a asp-action="Index" asp-controller="Name" class="btn btn-primary">
            Change Name
        </a>
        <button type="submit" class="btn btn-primary">
            Clear Favorites
        </button>
    </form>
    <br />
</div>


<div class="row">
    <div class="col-8 offset-2">
        <ul class="list-group">
            @foreach (Team team in Model.Teams)
            {
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-sm-4">
                            <img src="~/images/@team.FlagImage" alt="" />
                        </div>
                        <div class="col-sm-4">
                            @team.Name
                        </div>
                        <div class="col-sm-4">
                            @team.Category.Name @team.Game.Name
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>